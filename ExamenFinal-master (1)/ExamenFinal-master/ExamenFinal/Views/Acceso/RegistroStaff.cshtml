@{
    Layout = null;
}

@model ExamenFinal.Models.SuperClase

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registro de Usuario</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f7f7f7;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .form-container {
            background-color: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);
            width: 400px;
        }

        h2 {
            text-align: center;
            color: #333;
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-spacing: 10px 15px;
        }

        input[type="text"], input[type="email"], input[type="password"], select {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
        }

        button {
            width: 48%;
            padding: 10px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
        }

        button:hover {
            background-color: #45a049;
        }

        .cancel-button {
            background-color: #f44336;
        }

        .cancel-button:hover {
            background-color: #e53935;
        }

        .nav-link {
            display: inline-block;
            margin-top: 10px;
            text-align: center;
            width: 100%;
            color: #4CAF50;
            text-decoration: none;
            font-size: 14px;
        }

        .nav-link:hover {
            color: #45a049;
        }
    </style>
</head>
<body>
    <div class="form-container">
        <h2>Registro de Usuario</h2>

        <form action="/submit" method="post">
            <table>
                <tr>
                    <td><label for="id_user">Identificación:</label></td>
                    <td><input type="text" name="id_user" id="id_user" value="" required></td>
                </tr>
                <tr>
                    <td><label for="first_name">Nombre:</label></td>
                    <td><input type="text" name="first_name" id="first_name" value="" required></td>
                </tr>
                <tr>
                    <td><label for="last_name">Apellido:</label></td>
                    <td><input type="text" name="last_name" id="last_name" value="" required></td>
                </tr>
                <tr>
                    <td><label for="email">Correo:</label></td>
                    <td><input type="email" name="email" id="email" value="" required></td>
                </tr>
                <tr>
                    <td><label for="active">Activo:</label></td>
                    <td><input type="checkbox" name="active" id="active" checked></td>
                </tr>
                <tr>
                    <td><label for="store_id">Tienda:</label></td>
                    <td>
                        @if (Model != null)
                        {
                            <select id="store_id" name="store_id">
                                <option value="">Seleccione una tienda</option>
                                @foreach (var store in Model.Stores)
                                {
                                    <option value="@store.store_id">@store.store_name</option>
                                }
                            </select>
                        }
                        else
                        {
                            <p>No hay Tiendas disponibles.</p>
                        }
                    </td>
                </tr>
                <tr>
                    <td><label for="contraseña">Contraseña:</label></td>
                    <td><input type="password" name="contraseña" value="***********" required></td>
                </tr>
            </table>

            <br>

            <div style="display: flex; justify-content: space-between;">
                <button type="submit">GUARDAR</button>
                <button type="reset" class="cancel-button">CANCELAR</button>
            </div>

            <div style="text-align: center; margin-top: 15px;">
                @Html.ActionLink("Regresar a Login", "Autenticar", "Acceso", new { area = "" }, new { @class = "nav-link" })
            </div>
        </form>
    </div>
</body>
</html>
